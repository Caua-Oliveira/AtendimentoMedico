@model IEnumerable<ClinicaBemEstar.Models.Specialty>

@{
    ViewData["Title"] = "Gerenciar Especialidades";
}

<h1>Gerenciar Especialidades</h1>
<a asp-action="Index" class="btn btn-secondary mb-3"><i class="bi bi-arrow-left"></i> Voltar ao Painel</a>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card mb-4">
    <div class="card-header">
        Adicionar Nova Especialidade
    </div>
    <div class="card-body">
        <form asp-action="AddSpecialty" method="post" class="row g-3">
            <div class="col-md-5">
                <label for="addName" class="form-label visually-hidden">Nome</label>
                <input type="text" id="addName" name="Name" class="form-control" placeholder="Nome da Especialidade" required>
            </div>
            <div class="col-md-5">
                <label for="addImg" class="form-label visually-hidden">URL da Imagem</label>
                <input type="url" id="addImg" name="ImageUrl" class="form-control" placeholder="URL da Imagem (https://...) Opcional">
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100" type="submit">Adicionar</button>
            </div>
        </form>
    </div>
</div>


<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Imagem (Preview)</th>
            <th style="width: 150px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" style="width: 120px; height: 60px; object-fit: cover; border-radius: 5px;" />
                    }
                    else
                    {
                        <span class="text-muted small">Sem imagem</span>
                    }
                </td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@item.Id">
                        <i class="bi bi-pencil-square"></i>
                    </button>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                        <i class="bi bi-trash-fill"></i>
                    </button>
                </td>
            </tr>

            <div class="modal fade" id="editModal-@item.Id" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="EditSpecialty" method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <div class="modal-header">
                                <h5 class="modal-title">Editar Especialidade</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Nome</label>
                                    <input type="text" name="Name" value="@item.Name" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">URL da Imagem</label>
                                    <input type="url" name="ImageUrl" value="@item.ImageUrl" class="form-control" placeholder="https://... (Opcional)" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="DeleteSpecialty" asp-route-id="@item.Id" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirmar Exclusão</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Tem certeza que deseja excluir a especialidade "@item.Name"?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                                <button type="submit" class="btn btn-danger">Sim, Excluir</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>