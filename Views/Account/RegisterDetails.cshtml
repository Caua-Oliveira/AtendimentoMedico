@model ClinicaBemEstar.Models.User

@{
    ViewData["Title"] = "Complete seu Cadastro";
}

<style>
    .auth-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        text-align: center;
        background-color: #fff;
    }

    .auth-box {
        width: 100%;
        max-width: 380px;
        padding: 20px;
    }

    .app-name {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 3rem;
    }

    .auth-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

    .form-control {
        height: 48px;
        border-radius: 8px;
        border: 1px solid #ced4da;
    }

    .btn-dark {
        background-color: #000;
        color: #fff;
        height: 48px;
        width: 100%;
        border-radius: 8px;
        font-weight: 600;
    }
</style>

<div class="auth-container">
    <div class="auth-box">
        <h1 class="app-name">Clínica Bem-Estar</h1>

        <h2 class="auth-title">Complete seu Cadastro</h2>
        <p class="auth-subtitle">Falta pouco! Crie sua conta para continuar.</p>

        <form asp-action="RegisterDetails" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Email" />

            <div class="mb-3 text-start">
                <label asp-for="Name" class="form-label fw-bold">Nome Completo</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3 text-start">
                <label asp-for="Password" class="form-label fw-bold">Senha</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-dark mt-3">Criar Conta</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}